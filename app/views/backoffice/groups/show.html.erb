<div class="row" style="margin-top: 100px">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active" id="list-title-list" data-toggle="list" href="#list-title" role="tab" aria-controls="home">Titulo</a>
      <a class="list-group-item list-group-item-action" id="list-description-list" data-toggle="list" href="#list-description" role="tab" aria-controls="profile">Descrição</a>
      <a class="list-group-item list-group-item-action" id="list-service-list" data-toggle="list" href="#list-service" role="tab" aria-controls="messages">Serviço</a>
      <a class="list-group-item list-group-item-action" id="list-value-list" data-toggle="list" href="#list-value" role="tab" aria-controls="settings">Valor</a>
      <a class="list-group-item list-group-item-action" id="list-leader-list" data-toggle="list" href="#list-leader" role="tab" aria-controls="settings">Lider</a>
      <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="list-member-list" data-toggle="list" href="#list-member" role="tab" aria-controls="settings">Membros<span class="badge badge-primary badge-pill"><%= @group.member_groups.size%></span></a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="list-title" role="tabpanel" aria-labelledby="list-title-list">
        <%= @group.title %>
      </div>
      <div class="tab-pane fade" id="list-description" role="tabpanel" aria-labelledby="list-description-list">
        <%= @group.description %>
      </div>
      <div class="tab-pane fade" id="list-service" role="tabpanel" aria-labelledby="list-service-list">
        <%= @group.service.title %>
      </div>
      <div class="tab-pane fade" id="list-value" role="tabpanel" aria-labelledby="list-value-list">
        <%= @group.value %>
      </div>
      <div class="tab-pane fade" id="list-leader" role="tabpanel" aria-labelledby="list-leader-list">
        <%= @group.leader_group.beta_user.name %>
      </div>
      <div class="tab-pane fade" id="list-member" role="tabpanel" aria-labelledby="list-member-list">
        <% @group.member_groups.each do |member| %>
        <%= member.beta_user.name %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>