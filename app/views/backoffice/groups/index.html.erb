<h1>Grupos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Tipo</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
    <tr>
      <th scope="row"><%= group.id %></th>
      <td><%= group.title %></td>
      <td><%= group.kind %></td>
    </tr>
    <% end %>
  </tbody>
</table>