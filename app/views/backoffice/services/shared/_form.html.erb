<div class="row" style="margin-top: 100px">
  <div class="col-3">
  </div>

  <div class="col-6">
    <%= form_with model: [:backoffice, @service], local: true do |f| %>
    <div class="form-group">
      <%= label_tag :title %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :kind %>
      <%= f.text_field :kind, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= f.text_field :description, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :value %>
      <%= f.number_field :value, class:"form-control", min:"0", value:"#{@service.value.blank? ? 0 : @service.value}", step:"0.01" %>
    </div>
    <div class="text-center" style="margin-top: 10px;">
      <%= f.button :submit, class:"btn btn-outline-success" do%>
      Salvar
      <% end %>
    </div>
    <% end %>
  </div>
</div>