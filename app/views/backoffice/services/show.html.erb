<div class="row" style="margin-top: 100px">
  <div class="col-3">
  </div>
  <div class="col-6">
    <ul class="list-group">
      <li class="list-group-item list-group-item-action">
        <b>Nome:</b> <%= @service.title %>
      </li>
      <li class="list-group-item list-group-item-action">
        <b>Tipo:</b> <%= @service.kind %>
      </li>
      <li class="list-group-item list-group-item-action">
        <b>Descrição:</b> <%= @service.description %>
      </li>
      <li class="list-group-item list-group-item-action">
        <b>Valor:</b> R$ <%= @service.value %>
      </li>
    </ul>
    <div class="text-center" style="margin-top: 10px;">
      <%= link_to edit_backoffice_service_path(@service), class:"btn btn-outline-primary", style:"margin-right: 10px;" do %>
      <i class="fas fa-user-edit"></i>
      Editar
      <% end %>
      <%= link_to backoffice_service_path(@service), method: :delete, class:"btn btn-outline-danger", data: {confirm: "Deseja realmente excluir #{@service.title}"} do %>
      <i class="fas fa-trash-alt"></i>
      Deletar
      <% end %>
    </div>
  </div>
</div>