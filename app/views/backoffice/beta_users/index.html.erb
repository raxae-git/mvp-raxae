<h1>Raxadores</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Telefone</th>
      <th scope="col" class="text-center">
        <%= link_to new_backoffice_beta_user_path, class:"btn btn-outline-success" do %>
        <i class="fas fa-user-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @beta_users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td class="text-center">
        <%= link_to backoffice_beta_user_path(user), class:"btn btn-outline-info", style:"margin-right: 10px;" do %>
        <i class="fas fa-info" style="margin: 4px 6px 4px 6px;"></i>
        <% end %>
        <%= link_to backoffice_beta_user_path(user), method: :delete, class:"btn btn-outline-danger", data: {confirm: "Deseja realmente excluir #{user.name}"} do %>
        <i class="fas fa-trash-alt" style="margin: 4px;"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-3">
  </div>
  <div class="col-6 text-center">
    <%= paginate @beta_users %>
  </div>
  <div class="col-3">
  </div>
</div>