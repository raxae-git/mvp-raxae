<div class="relative block py-24 lg:pt-0">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-center">
      <%= form_with model: @beta_user, url: beta_users_path(@beta_user), class:" w-full lg:w-6/12 px-4", local: true do |f| %>
      <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300">
        <div class="flex-auto p-5 lg:p-10">
          <h4 class="text-2xl font-semibold">
            <font style="vertical-align: inherit;">
              <font style="vertical-align: inherit;">Venha a bordo do Raxaê</font>
            </font>
          </h4>
          <p class="leading-relaxed mt-1 mb-4 text-gray-600">
            <font style="vertical-align: inherit;">
              <font style="vertical-align: inherit;">Preencha este formulário e entraremos em contato com você em 24 horas.</font>
            </font>
          </p>
          <div class="relative w-full px-1 mb-3 mt-8">
            <%= f.label :name, class:"block uppercase text-gray-700 text-xs font-bold mb-2" do %>
            <font style="vertical-align: inherit;">
              <font style="vertical-align: inherit;">Nome</font>
            </font>
            <% end %>
            <%= f.text_field :name, class:"px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full", placeholder:"Ex.: Paulo Pinho de Souza", style:"transition: all 0.15s ease 0s;" %>
          </div>
          <div class="relative w-full px-1 mb-3 mt-8">
            <%= f.label :email, class:"block uppercase text-gray-700 text-xs font-bold mb-2" do %>
            <font style="vertical-align: inherit;">
              <font style="vertical-align: inherit;">Email</font>
            </font>
            <% end %>
            <%= f.email_field :email, class:"px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full", placeholder:"Ex.: example@email.com", style:"transition: all 0.15s ease 0s;" %>
          </div>
          <div class="flex flex-wrap mb-3">
            <div class="relative w-full md:w-1/2 px-1 mb-6 md:mb-0">
              <%= f.label "Serviço de Mensagem", class:"block uppercase text-gray-700 text-xs font-bold mb-2" %>
              <div class="relative">
                <%= f.select :messaging_service, options_for_select(['', 'Whatsapp', 'Telegram']),{}, {class:"appearance-none w-full bg-white text-gray-700 py-3 px-3 rounded text-sm shadow focus:outline-none focus:shadow-outline"} %>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                  <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
                </div>
              </div>
            </div>
            <div class="relative w-full md:w-1/2 px-1 mb-6 md:mb-0">
              <%= f.label :phone, class:"block uppercase text-gray-700 text-xs font-bold mb-2" do %>
              <font style="vertical-align: inherit;">
                <font style="vertical-align: inherit;">Telefone</font>
              </font>
              <% end %>
              <%= f.text_field :phone, id:"Phone", maxlength:"15", class:"px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full", placeholder:"Telefone", style:"transition: all 0.15s ease 0s;" %>
            </div>
          </div>
          <div class="flex flex-wrap mb-3">
            <div class="relative w-full md:w-1/2 px-1 mb-6 md:mb-0">
              <%= f.label "Serviço de Interesse", class:"block uppercase text-gray-700 text-xs font-bold mb-2" %>
              <div class="relative">
                <% services_array = @services.map {|s| [s.title, s.title]}%>
                <%= f.select :service_of_interest, options_for_select(services_array.push(["Outro", "Outro"])), {include_blank: true}, {id:"Selected", class:"appearance-none w-full bg-white text-gray-700 py-3 px-3 rounded text-sm shadow focus:outline-none focus:shadow-outline"} %>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                  <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
                </div>
              </div>
            </div>
            <div id="interest" class="relative w-full md:w-1/2 px-1 mb-6 md:mb-0 hidden">
              <%= f.label "",class:"block uppercase text-gray-700 text-xs font-bold mb-2" do %>
              <font style="vertical-align: inherit;">
                <font style="vertical-align: inherit;">Interesse</font>
              </font>
              <% end %>
              <%= f.text_field :service_of_interest, id:"extra", class:"px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full", placeholder:"Telefone", style:"transition: all 0.15s ease 0s;" %>
            </div>
          </div>
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3"></div>
            <label class="md:w-2/3 block text-gray-500 font-bold">
              <input class="mr-2 leading-tight" type="checkbox">
              <span class="text-sm">
                Concordo com os termos
              </span>
            </label>
          </div>
          <div class="text-center mt-6">
            <%= f.button type:'submit', class:"bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1", style:"transition: all 0.15s ease 0s;" do %>
            <font style="vertical-align: inherit;">
              <font style="vertical-align: inherit;">Enviar mensagem</font>
            </font>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>